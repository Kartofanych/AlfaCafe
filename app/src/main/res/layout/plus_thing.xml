<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    style="@style/TypesBack">
    <ImageView
        android:id="@+id/img_classsss"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/star"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/img_classsss">
        <TextView
            android:id="@+id/ex_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:maxLines="2"
            style="@style/WhiteTxt"
            android:fontFamily="@font/open_sans_light"
            android:textSize="12sp"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/ex_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ex_money"
            android:maxLines="1"
            style="@style/WhiteTxt"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ex_name"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/plus_it"
            android:text="Добавить"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.2"
            android:layout_gravity="start"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans_regular"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/red_but"
            />

    </LinearLayout>

</RelativeLayout>