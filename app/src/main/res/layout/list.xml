<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    style="@style/TypesBack"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сегодня, 16 июля"
            android:fontFamily="@font/open_sans_semibold"
            style="@style/WhiteTxt"
            android:textSize="20sp"
            />
        <RelativeLayout
            android:id="@+id/only_one"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:id="@+id/rell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/back_grey_but"
                android:paddingHorizontal="7dp"
                android:paddingVertical="5dp">
                <ImageView
                    android:id="@+id/filters"
                    android:layout_width="21dp"
                    android:layout_height="14dp"
                    android:src="@drawable/filters"/>
                <ImageView
                    android:layout_width="9dp"
                    android:layout_marginLeft="3dp"
                    android:layout_height="9dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/filters"
                    android:src="@drawable/arrow_down"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_grey_but"
                android:paddingHorizontal="7dp"
                android:paddingVertical="5dp"
                android:layout_toLeftOf="@+id/rell"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="21dp"
                    android:layout_height="14dp"
                    android:src="@drawable/calendar"/>
                <ImageView
                    android:layout_width="9dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="9dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/calendar"
                    android:src="@drawable/arrow_down"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>