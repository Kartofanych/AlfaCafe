<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    tools:context=".ui.dashboard.DashboardFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="20dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            >
            <ImageView
                android:id="@+id/group"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:layout_height="50dp"
                android:src="@drawable/group"
                android:background="@color/red"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/rel_top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Gradient">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/rel_top"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_alfa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="25dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logo_icon_white"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/halo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/card_alfa"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Добро пожаловать \nв Альфа-Кафе!"
                    android:textColor="@color/white"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wanna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/rel_top"
                android:layout_marginHorizontal="30dp"
                android:elevation="10dp"
                style="@style/TypesBack"
                >
                <ImageView
                    android:id="@+id/scan"
                    android:layout_width="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    style="@style/Scan"/>

                <TextView
                    android:id="@+id/wanna_be_better"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Устали стоять в очереди?"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/scan"
                    style="@style/WhiteTxt"
                    android:fontFamily="@font/open_sans_regular"
                    />

                <TextView
                    android:id="@+id/wanna_be_better2"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="Сканируйте свой поднос с едой!"
                    android:layout_toRightOf="@+id/scan"
                    android:layout_below="@+id/wanna_be_better"
                    android:layout_marginBottom="5dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/open_sans_regular"
                    />
                <Button
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:id="@+id/scan_itt"
                    android:text="Сканировать"
                    android:letterSpacing="0.2"
                    android:paddingHorizontal="10dp"
                    android:drawableEnd="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="30dp"
                    android:stateListAnimator="@null"
                    android:textSize="12dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/red_but"
                    android:layout_below="@+id/wanna_be_better2"
                    android:layout_toRightOf="@+id/scan"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_below="@+id/wanna"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B5B5B5"
                android:layout_marginVertical="35dp"

                />
            <RelativeLayout
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recommendations">
                <RelativeLayout
                    android:id="@+id/relll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Популярное"
                        android:textSize="17sp"
                        android:letterSpacing="0.1"
                        android:fontFamily="@font/open_sans_semibold"
                        style="@style/WhiteTxt"
                        />
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txt"
                        android:src="@drawable/arrow_down"/>
                </RelativeLayout>
                <HorizontalScrollView
                    android:id="@+id/scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relll"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbars="none"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lin"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbars="none"
                        android:orientation="horizontal"/>
                </HorizontalScrollView>
                <RelativeLayout
                    android:id="@+id/KO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="70dp"
                    android:elevation="10dp"
                    android:layout_below="@id/scroll"
                    style="@style/TypesBack"
                    android:paddingVertical="10dp">
                    <ImageView
                        android:id="@+id/korz"
                        android:layout_width="70dp"
                        android:layout_marginVertical="10dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/korz"/>

                    <TextView

                        android:id="@+id/wanna_ko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ваш комплексный обед"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/korz"
                        style="@style/WhiteTxt"
                        android:fontFamily="@font/open_sans_regular"
                        />

                    <TextView
                        android:id="@+id/wanna_ko_2"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="Суп, горячее, напиток, десерт \nи закуска специально для вас!"
                        android:layout_toRightOf="@+id/korz"
                        android:layout_below="@+id/wanna_ko"
                        android:layout_marginBottom="5dp"
                        android:textSize="11sp"
                        android:fontFamily="@font/open_sans_regular"
                        />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="37dp"
                        android:id="@+id/do_it"
                        android:text="Собрать"
                        android:letterSpacing="0.2"
                        android:paddingHorizontal="5dp"
                        android:textSize="12dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/red_but"
                        android:stateListAnimator="@null"
                        android:layout_below="@+id/wanna_ko_2"
                        android:layout_toRightOf="@+id/korz"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_below="@+id/KO"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#B5B5B5"
                    android:layout_marginVertical="10dp"


                    />
                <RelativeLayout
                    android:layout_below="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/otz">
                    <RelativeLayout
                        android:id="@+id/rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Оставьте отзыв"
                            android:layout_marginLeft="20dp"
                            android:textSize="17sp"
                            android:letterSpacing="0.1"
                            android:fontFamily="@font/open_sans_semibold"
                            style="@style/WhiteTxt"
                            />
                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/txt1"
                            android:src="@drawable/arrow_down"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/for_otz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rel"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="10dp"
                        >
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:paddingVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans_semibold"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/design_for_edit_text"
                            android:hint="Ваш Email"/>

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:textSize="14sp"
                            android:layout_below="@+id/email"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/design_for_edit_text"
                            android:layout_marginTop="10dp"
                            android:hint="Ваше имя"/>
                        <EditText
                            android:id="@+id/otz_txt"
                            android:layout_width="250dp"
                            android:layout_height="140dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:paddingVertical="5dp"
                            android:gravity="top"
                            android:layout_below="@+id/name"
                            android:fontFamily="@font/open_sans_semibold"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/design_for_edit_text"
                            android:layout_marginTop="10dp"
                            android:hint="Ваш отзыв"/>
                        <Button
                            android:layout_width="180dp"
                            android:layout_height="37dp"
                            android:id="@+id/send"
                            android:text="Отправить"
                            android:layout_centerHorizontal="true"
                            android:letterSpacing="0.2"
                            android:layout_marginTop="20dp"
                            android:paddingHorizontal="5dp"
                            android:textSize="12dp"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/red_but"
                            android:stateListAnimator="@null"
                            android:layout_below="@+id/otz_txt"

                            />
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
    <include layout="@layout/bottom_sheet" />
    <include layout="@layout/bottom_big_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>